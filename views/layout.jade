doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width')
    title= title
    //bower:css
    link(rel='stylesheet', href='/components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet', href='/components/font-awesome/css/font-awesome.css')
    //endbower

    block css
      link(rel='stylesheet', href='/css/style.css')

    script(src='http://localhost:35729/livereload.js')
  body
    - if (user)
      nav.navbar.navbar-inverse(role='navigation')
        .container
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='#') Staff's Wiki
          #navbar.collapse.navbar-collapse
            ul.nav.navbar-nav
              li
                a(href='/panel/employees') Listar Empleados
              li
                a(href='/panel/employees/new') Nuevo Empleado
            - if (user)
              ul.nav.navbar-nav.navbar-right
                li
                  a#logout(href='/logout')
                    span.glyphicon.glyphicon-log-out
    .container
      #messages_container
        - if (typeof message !== 'undefined' && message !== null)
          - if (typeof message.error !== 'undefined' && message.error.length)
            - each msg in message.error
                div.alert.alert-danger(role="alert")= msg

          - if (typeof message.warning !== 'undefined' && message.warning.length)
            - each msg in message.warning
                div.alert.alert-warning(role="alert")= msg

          - if (typeof message.info !== 'undefined' && message.info.length)
            - each msg in message.info
                div.alert.alert-info(role="alert")= msg

          - if (typeof message.success !== 'undefined' && message.success.length)
            - each msg in message.success
                div.alert.alert-success(role="alert")= msg
      block content

    //bower:js
    script(src='/components/jquery/dist/jquery.js')
    script(src='/components/bootstrap/dist/js/bootstrap.js')
    script(src='/components/validator-js/validator.min.js')
    //endbower

    block js
